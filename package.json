{
	"name": "esast",
	"version": "0.0.0",
	"scripts": {
		"install": "gulp compile",
		"watch": "gulp watch",
		"doc": "esdoc -c esdoc.json",
		"lint": "eslint gulpfile.js src test",
		"test": "gulp compile-test && mocha compiled-test/**/*.js",
		"perf-test": "gulp perf-test"
	},
	"files": ["dist", "src"],
	"dependencies": {
		"amdefine": "1.0.0",
		"source-map": "mozilla/source-map"
	},
	"devDependencies": {
		"acorn": "2.4.0",
		"esdoc": "0.4.0",
		"gulp": "3.9.0",
		"gulp-babel": "5.2.1",
		"gulp-header": "1.7.1",
		"gulp-plumber": "1.0.1",
		"gulp-sourcemaps": "1.6.0",
		"gulp-watch": "4.3.5",
		"mocha": "2.3.3",

		"benchmark": "latest",
		"microtime": "latest",
		"escodegen": "latest",
		"esotope": "latest"
	},
	"repository": "mason-lang/esast",
	"eslintConfig": {
		"ecmaFeatures": {
			"arrowFunctions": true,
			"blockBindings": true,
			"classes": true,
			"defaultParams": true,
			"destructuring": true,
			"forOf": true,
			"generators": true,
			"modules": true,
			"objectLiteralShorthandMethods": true,
			"objectLiteralShortandProperties": true,
			"restParams": true,
			"spread": true,
			"templateStrings": true
		},
		"globals": {"console": true, "describe": true, "it": true, "require": true},
		"rules": {
			"array-bracket-spacing": 1,
			"comma-style": [1, "last"],
			"curly": [1, "multi"],
			"default-case": 1,
			"generator-star-spacing": [1, "after"],
			"max-len": [1, 100, 4],
			"no-extra-parens": 1,
			"no-floating-decimal": 1,
			"no-multiple-empty-lines": [1, {"max": 2}],
			"no-plusplus": 1,
			"no-spaced-func": 1,
			"no-throw-literal": 1,
			"no-trailing-spaces": 1,
			"no-unused-vars": 1,
			"no-var": 1,
			"no-void": 1,
			"no-undef": 1,
			"object-curly-spacing": 1,
			"operator-assignment": [1, "never"],
			"padded-blocks": [1, "never"],
			"quote-props": [1, "as-needed"],
			"quotes": [1, "single"],
			"space-before-blocks": [1, "always"],
			"space-before-function-paren": [1, "never"],
			"spaced-comment": 1,
			"space-in-parens": [1, "never"]
		}
	},
	"license": "WTFPL"
}
